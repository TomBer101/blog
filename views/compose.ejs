<%- include("partials/header") -%>


<h1>Compose</h1>
<form action="compose" method="post">
    <div class="form-group">
        <label for="textTitle">Title</label>
        <input type="text" name="postTitle" autocomplete="off" id="textTitle" class="form-control">    

        <label for="textContent">Post</label>
        <textarea name="newText" autocomplete="off" id="textContent" class="form-control" rows="5" cols="30"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer") -%>